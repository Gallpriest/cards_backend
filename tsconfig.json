{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ESNext"],
    "target": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@handlers/*": ["./src/handlers/*"],
      "@constants": ["./src/constants/index.ts"]
    }
  },

  "exclude": ["node_modules"]
}
